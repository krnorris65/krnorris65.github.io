{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": 0,
        "quotes": [1, "double"],
        "eqeqeq": [2, "smart"],
        "no-debugger":0,
        "no-console":0,
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "no-unused-vars": 0
    }
}